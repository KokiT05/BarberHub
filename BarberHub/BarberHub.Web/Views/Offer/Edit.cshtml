@model BarberHub.Web.ViewModels.Offer.EditOfferViewModel

@{
    ViewData["Title"] = "Редактирай услуга: " + Model.Name;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-lg border-0 offer-form-card">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center text-warning mb-4"><i class="fas fa-edit mr-2"></i> Редактирай услуга</h2>
                    <hr class="mb-4 bg-warning">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-controller="Offer" asp-action="Edit" method="post">
                        @* Скрито поле за Id, за да се предаде обратно при POST заявката и да знаем коя услуга редактираме *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BarbershopId" />

                        <div class="form-group mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Име на услугата">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Кратко описание на услугата..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="Цена в лв.">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                @* Използваме warning за редактиране *@
                                <i class="fas fa-save mr-2"></i> Запази промени
                            </button>
@*                             <a asp-controller="Offer" asp-action="All" class="btn btn-outline-secondary btn-lg ml-3">
                                <i class="fas fa-times-circle mr-2"></i> Отмени
                            </a> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}