@using BarberHub.Web.ViewModels.Barbershop
@model IEnumerable<AllBarbershopsIndexViewModel>

@{
    ViewData["Title"] = "All barbershops";
}

<div class="container py-4">
    <h1 class="text-center mb-5 text-warning">Нашите бръснарници</h1>

    <form asp-controller="Barbershop" asp-action="Search" method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-5">
                <input type="text" name="name" class="form-control"
                       placeholder="Търси по име..."
                       value="@Context.Request.Query["name"]" />
            </div>
            <div class="col-md-5">
                <input type="text" name="city" class="form-control"
                       placeholder="Търси по град..."
                       value="@Context.Request.Query["city"]" />
            </div>
            <div class="col-md-2 d-flex">
                <button type="submit" class="btn btn-warning w-100 me-2">Търси</button>
                <a asp-controller="Barbershop" asp-action="All" class="btn btn-outline-secondary w-100">Изчисти</a>
            </div>
        </div>
    </form>

    <hr class="bg-warning mb-5" style="height: 3px;">

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Няма добавени бръснарници.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var barbershop in Model)
            {
                <div class="col mb-4">
                    <div class="card h-100 shadow-sm border-0 barbershop-card">
                        <img src="@barbershop.ImageUrl" class="card-img-top barbershop-img" alt="Снимка на @barbershop.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark">@barbershop.Name</h5>
                            @if (!string.IsNullOrEmpty(barbershop.Description))
                            {
                                <p class="card-text text-muted flex-grow-1">
                                    @barbershop.Description ...
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-muted flex-grow-1">Няма налично описание.</p>
                            }
                            <div class="mt-auto">
                                <p class="card-text mb-1"><small class="text-secondary">Град: @barbershop.City, @barbershop.Address</small></p>
                                <p class="card-text mb-1"><small class="text-secondary">Телефон: @barbershop.PhoneNumber</small></p>
                                    <p class="card-text mb-1"><small class="text-secondary"><i class="far fa-clock mr-1"></i> Работно време: @barbershop.OpenTime - @barbershop.CloseTime</small></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a asp-controller="Barbershop" asp-action="Details" asp-route-id="@barbershop.Id" class="btn btn-outline-warning btn-sm">Виж повече</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Barbershop"
                               asp-action="All"
                               asp-route-page="@i"
                               asp-route-name="@ViewBag.SearchName"
                               asp-route-city="@ViewBag.SearchCity">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>